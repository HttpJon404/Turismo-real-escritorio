        <Label Content="Gestión departamentos" HorizontalAlignment="Left" Margin="358,35,0,0" VerticalAlignment="Top" Width="521" FontSize="48"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="900,0,0,0" VerticalAlignment="Top" Width="350" Source="images/logo_turismo.png"/>



    </Grid>
</Page>
