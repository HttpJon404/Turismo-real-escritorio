<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TurismoPresentacion"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" xmlns:iconPacks1="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="TurismoPresentacion.Login"
        mc:Ignorable="d"
        Title="Login" Height="392" Width="290" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,1">
        <iconPacks1:PackIconFontAwesome Kind="UserTieSolid" Height="68" Width="77" Margin="123,80,0,0" RenderTransformOrigin="0.437,0.182" />
        <Label Content="Email" HorizontalAlignment="Left" Margin="17,163,0,0" VerticalAlignment="Top" Width="56"/>
        <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Content="Iniciar sesión" HorizontalAlignment="Left" Margin="71,265,0,0" VerticalAlignment="Top" Width="154" mah:ControlsHelper.ContentCharacterCasing="Normal" Click="Button_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="99,209,0,0" VerticalAlignment="Top" Width="147"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="17,209,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="99,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147"/>
        <Image HorizontalAlignment="Left" Height="52" Margin="99,0,0,0" VerticalAlignment="Top" Width="183" Source="images/logo_turismo.png"/>

    </Grid>
</mah:MetroWindow>
