<Page x:Class="TurismoPresentacion.AdmUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:iconpacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TurismoPresentacion"
      Width="1085" Height="850"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Gestion de usuarios">

    <Grid>

        <DataGrid x:Name="dgClientes" HorizontalAlignment="Left" Height="475" Margin="30,325,0,0" VerticalAlignment="Top" Width="960" AutoGeneratedColumns="dgClientes_AutoGeneratedColumns" Background="{x:Null}" GridLinesVisibility="All" HeadersVisibility="Column"/>
        <Label Content="Gestión de usuarios" HorizontalAlignment="Left" Margin="290,21,0,0" VerticalAlignment="Top" Width="522" FontSize="48" FontFamily="Candara"/>

        <GroupBox Header="Filtros" HorizontalAlignment="Left" Height="131" Margin="138,130,0,0" VerticalAlignment="Top" Width="758"/>
        <Label Content="Rut" HorizontalAlignment="Left" Margin="157,170,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtRutFilter"  HorizontalAlignment="Left" Height="30" Margin="225,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="278" FontSize="16" FontFamily="Calibri" TextChanged="txtRutFilter_TextChanged"/>
        <ComboBox x:Name="cboEstado2" HorizontalAlignment="Left" Margin="599,168,0,0" VerticalAlignment="Top" Width="278" FontSize="16" FontFamily="Calibri" >
            <ComboBoxItem Content="Habilitado"/>
            <ComboBoxItem Content="Inhabilitado"/>
        </ComboBox>
        <Label Content="Estado" HorizontalAlignment="Left" Margin="529,168,0,0" VerticalAlignment="Top" FontSize="16"/>

        <Button x:Name="btnFiltrarUsuarios" ToolTip="Filtrar" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"  HorizontalAlignment="Left" Margin="784,205,0,0" VerticalAlignment="Top" Width="89" Height="42" mah:ControlsHelper.ContentCharacterCasing="Normal" Click="btnFiltrarUsuarios_Click">
            <iconpacks:PackIconFontAwesome Kind="FilterSolid" Height="26" Width="22"  />
        </Button>
        <Button ToolTip="Deshabilitar o habilitar usuario" x:Name="btnEliminar" HorizontalAlignment="Left" Margin="1004,323,0,0" VerticalAlignment="Top" Width="65" Height="46" mah:ControlsHelper.ContentCharacterCasing="Normal" Click="btnEliminar_Click">
            <iconpacks:PackIconFontAwesome Kind="UserAltSlashSolid" Height="32" Width="32"  />
        </Button>
        <Button ToolTip="Editar usuario seleccionado" x:Name="btnEditarUsuario" HorizontalAlignment="Left" Margin="1004,390,0,0" VerticalAlignment="Top" Width="65" Height="46" mah:ControlsHelper.ContentCharacterCasing="Normal" Click="btnEditarUsuario_Click">
            <iconpacks:PackIconFontAwesome Kind="UserEditSolid" Height="32" Width="32"  />
        </Button>
        <Button ToolTip="Nuevo usuario" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" x:Name="btnAbrirFlyout" HorizontalAlignment="Left" Margin="1004,456,0,0" VerticalAlignment="Top" Width="65" Height="46" mah:ControlsHelper.ContentCharacterCasing="Normal" RenderTransformOrigin="0.122,0.543" Click="btnAbrirFlyout_Click">
            <iconpacks:PackIconFontAwesome Kind="UserPlusSolid" Height="32" Width="32"  />
        </Button>
        <Label Content="Usuarios" HorizontalAlignment="Left" Margin="30,304,0,0" VerticalAlignment="Top" Width="62" Foreground="#FF513E3E" FontWeight="Bold"/>


        <mah:Flyout Theme="Adapt" x:Name="FlyAddUser" Position="Bottom" Height="512"  CloseButtonVisibility="Hidden" Margin="-1,0,0,0"  >
            <Grid x:Name="GridAddUser"  HorizontalAlignment="Left" Margin="0,10,0,0" Width="979">
                <Rectangle Fill="#00000000" HorizontalAlignment="Left" Height="420" Margin="0,72,0,0" Stroke="#FF688DB9" VerticalAlignment="Top" Width="979"/>
                <Grid Margin="0,0,0,430" Background="#CCFA6800">
                    <Label Content="Agregar usuario" HorizontalAlignment="Left" Margin="279,-9,0,-1" VerticalAlignment="Top" Width="388" FontSize="48" Foreground="White" FontFamily="Segoe UI Semibold" Height="82"/>
                    <Rectangle Fill="#00000000" HorizontalAlignment="Left" Height="73" Stroke="#FF688DB9" VerticalAlignment="Top" Width="979" Margin="0,0,0,-1"/>
                </Grid>
                <Label Content="Nombres" HorizontalAlignment="Left" Margin="511,107,0,0" VerticalAlignment="Top" FontSize="16" />
                <Label Content="Apellidos" HorizontalAlignment="Left" Margin="22,161,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Dirección" HorizontalAlignment="Left" Margin="22,312,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Correo" HorizontalAlignment="Left" Margin="511,362,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Celular" HorizontalAlignment="Left" Margin="22,213,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Edad" HorizontalAlignment="Left" Margin="511,161,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Región" HorizontalAlignment="Left" Margin="22,263,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Comuna" HorizontalAlignment="Left" Margin="511,262,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.507,1.194"/>
                <TextBox x:Name="txtRut"  HorizontalAlignment="Left" Height="31" Margin="128,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" PreviewTextInput="OnlyNumberRut"/>
                <TextBox x:Name="txtNombres"  HorizontalAlignment="Left" Height="31" Margin="609,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri"/>
                <TextBox x:Name="txtApellidos"  HorizontalAlignment="Left" Height="31" Margin="128,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri"/>
                <TextBox x:Name="txtEdad"  HorizontalAlignment="Left" Height="31" Margin="609,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" PreviewTextInput="SoloNumeros"/>
                <TextBox x:Name="txtCelular"  HorizontalAlignment="Left" Height="31" Margin="128,214,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" PreviewTextInput="Onlynumber"/>
                <ComboBox x:Name="cboGenero" HorizontalAlignment="Left" Margin="609,214,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" >
                    <ComboBoxItem Content="Masculino"/>
                    <ComboBoxItem Content="Femenino"/>
                </ComboBox>
                <ComboBox x:Name="cboRegion" HorizontalAlignment="Left" Margin="128,264,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" SelectionChanged="cargarComunas" >

                </ComboBox>
                <ComboBox x:Name="cboComuna" HorizontalAlignment="Left" Margin="609,262,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" >

                </ComboBox>
                <TextBox x:Name="txtDireccion"  HorizontalAlignment="Left" Height="31" Margin="128,312,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri"/>

                <ComboBox x:Name="cboEstado" HorizontalAlignment="Left" Margin="609,313,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" SelectedIndex="0" >
                    <ComboBoxItem Content="Activo"/>
                    <ComboBoxItem Content="Inactivo"/>
                </ComboBox>

                <ComboBox x:Name="cboRol" HorizontalAlignment="Left" Margin="128,363,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" >
                    <ComboBoxItem Content="Administrador"/>
                    <ComboBoxItem Content="Funcionario"/>
                </ComboBox>
                <TextBox x:Name="txtEmail"  HorizontalAlignment="Left" Height="31" Margin="609,362,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri"/>

                <Label Content="Rut" HorizontalAlignment="Left" Margin="22,107,0,0" VerticalAlignment="Top" FontSize="16"/>

                <Label Content="Estado" HorizontalAlignment="Left" Margin="511,312,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.596,0.548"/>
                <Button x:Name="btnGuardarUsuario" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Content="Guardar" HorizontalAlignment="Left" Margin="802,411,0,0" VerticalAlignment="Top" Width="127" Height="46" mah:ControlsHelper.ContentCharacterCasing="Normal" FontSize="18" FontFamily="Malgun Gothic" RenderTransformOrigin="0.516,0.239" Click="btnGuardarUsuario_Click"/>



                <Label Content="Género" HorizontalAlignment="Left" Margin="511,213,0,0" VerticalAlignment="Top" FontSize="16"/>

                <Button x:Name="btnCerrarFlyUser" Content="Cancelar" HorizontalAlignment="Left" Margin="670,411,0,0" VerticalAlignment="Top" Width="127" Height="46" mah:ControlsHelper.ContentCharacterCasing="Normal" Click="btnCerrarFlyUser_Click" FontSize="16" />


                <Label Content="Rol" HorizontalAlignment="Left" Margin="22,362,0,0" VerticalAlignment="Top" FontSize="16"/>


            </Grid>

        </mah:Flyout>
        <Button x:Name="btnReestablecerFiltros" ToolTip="Reestablecer filtros" HorizontalAlignment="Left" Margin="690,206,0,0" VerticalAlignment="Top" Width="89" Height="42" mah:ControlsHelper.ContentCharacterCasing="Normal" Click="btnReestablecerFiltros_Click">
            <iconpacks:PackIconFontAwesome Kind="RedoAltSolid" Height="26" Width="22"  />
        </Button>
        <mah:Flyout Theme="Adapt" x:Name="FlyEditUser" Position="Bottom" Height="512"  CloseButtonVisibility="Hidden" Margin="-1,0,0,0"  >
            <Grid  x:Name="GridAddUser1"  HorizontalAlignment="Left" Margin="0,10,0,0" Width="979">
                <Rectangle Fill="#00000000" HorizontalAlignment="Left" Height="420" Margin="0,72,0,0" Stroke="#FF688DB9" VerticalAlignment="Top" Width="979"/>
                <Grid Margin="0,0,0,430" Background="#CCFA6800">
                    <Label Content="Editar usuario" HorizontalAlignment="Left" Margin="359,-9,0,-1" VerticalAlignment="Top" Width="388" FontSize="48" Foreground="White" FontFamily="Segoe UI Semibold" Height="82"/>
                    <Rectangle Fill="#00000000" HorizontalAlignment="Left" Height="73" Stroke="#FF688DB9" VerticalAlignment="Top" Width="979" Margin="0,0,0,-1"/>
                </Grid>
                <Label Content="Nombres" HorizontalAlignment="Left" Margin="511,107,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Apellidos" HorizontalAlignment="Left" Margin="22,161,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Dirección" HorizontalAlignment="Left" Margin="22,312,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Correo" HorizontalAlignment="Left" Margin="511,312,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Celular" HorizontalAlignment="Left" Margin="22,213,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Edad" HorizontalAlignment="Left" Margin="511,161,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Región" HorizontalAlignment="Left" Margin="22,263,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Label Content="Comuna" HorizontalAlignment="Left" Margin="511,262,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.507,1.194"/>
                <TextBox x:Name="txtRutEdit"  HorizontalAlignment="Left" Height="31" Margin="128,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" PreviewTextInput="OnlyNumberRut"/>
                <TextBox x:Name="txtNombresEdit"  HorizontalAlignment="Left" Height="31" Margin="609,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri"/>
                <TextBox x:Name="txtApellidosEdit"  HorizontalAlignment="Left" Height="31" Margin="128,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri"/>
                <TextBox x:Name="txtEdadEdit"  HorizontalAlignment="Left" Height="31" Margin="609,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" PreviewTextInput="SoloNumeros"/>
                <TextBox x:Name="txtCelularEdit"  HorizontalAlignment="Left" Height="31" Margin="128,214,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" PreviewTextInput="SoloNumeros"/>
                <ComboBox x:Name="cboGenero1" HorizontalAlignment="Left" Margin="609,214,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" >
                    <ComboBoxItem Content="Masculino"/>
                    <ComboBoxItem Content="Femenino"/>
                </ComboBox>
                <ComboBox x:Name="cboRegion1" HorizontalAlignment="Left" Margin="128,264,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" SelectionChanged="cboRegion1_SelectionChanged" >
                </ComboBox>
                <ComboBox x:Name="cboComuna1" HorizontalAlignment="Left" Margin="609,262,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" >
                </ComboBox>
                <TextBox x:Name="txtDireccionEdit"  HorizontalAlignment="Left" Height="31" Margin="128,312,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri"/>

                <ComboBox x:Name="cboRol1" HorizontalAlignment="Left" Margin="128,363,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" >
                    <ComboBoxItem Content="Administrador"/>
                    <ComboBoxItem Content="Funcionario"/>

                </ComboBox>
                <TextBox x:Name="txtEmailEdit"  HorizontalAlignment="Left" Height="31" Margin="609,312,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri"/>

                <Label Content="Rut" HorizontalAlignment="Left" Margin="22,107,0,0" VerticalAlignment="Top" FontSize="16"/>
                <Button x:Name="btnGuardarUsuario1" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Content="Guardar" HorizontalAlignment="Left" Margin="802,413,0,0" VerticalAlignment="Top" Width="127" Height="46" mah:ControlsHelper.ContentCharacterCasing="Normal" FontSize="18" FontFamily="Malgun Gothic" RenderTransformOrigin="0.516,0.239" Click="btnGuardarUsuarioEdit_Click"/>



                <Label Content="Género" HorizontalAlignment="Left" Margin="511,213,0,0" VerticalAlignment="Top" FontSize="16"/>

                <Button x:Name="btnCerrarFlyEditUser" Content="Cancelar" HorizontalAlignment="Left" Margin="670,413,0,0" VerticalAlignment="Top" Width="127" Height="46" mah:ControlsHelper.ContentCharacterCasing="Normal" Click="btnCerrarFlyEditUser_Click" FontSize="16" />


                <Label Content="Rol" HorizontalAlignment="Left" Margin="22,362,0,0" VerticalAlignment="Top" FontSize="16"/>
                <ComboBox x:Name="cboEstado1" HorizontalAlignment="Left" Margin="609,362,0,0" VerticalAlignment="Top" Width="320" FontSize="16" FontFamily="Calibri" SelectedIndex="0" IsEnabled="False" >
                    <ComboBoxItem Content="Activo"/>
                    <ComboBoxItem Content="Inactivo"/>
                </ComboBox>
                <Label Content="Estado" HorizontalAlignment="Left" Margin="511,361,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.596,0.548" IsEnabled="False"/>
                <Label x:Name="lblId" Content="Label" HorizontalAlignment="Left" Margin="56,77,0,0" VerticalAlignment="Top" Visibility="Hidden"/>


            </Grid>

        </mah:Flyout>

    </Grid>
</Page>
